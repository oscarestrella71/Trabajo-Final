{{#if tasks}}

  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Título</th>
        <th>Descripción</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a href="/toggleDone/{{_id}}" class="btn btn-warning">Tarea sin
                hacer</a>
            {{else}}
              <a href="/toggleDone/{{_id}}" class="btn btn-success">Tarea hecha</a>
            {{/if}}
            <a href="/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
            <a href="/edit/{{_id}}" class="btn btn-info">Editar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

{{else}}

  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No hay notas ¡Agregá una!</h1>
      <img src="/images/gatoNota.png" alt="michi" />
    </div>
  </div>

{{/if}}